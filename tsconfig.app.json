{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "temp/BlogPage.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "paths": {
            "@/*": ["./src/*"]
        },
        // "target": "ESNext", // 或者 ES2020，取决于你项目的目标环境
        "strict": true, // 开启严格模式，帮助捕获更多的类型错误
        "moduleResolution": "Node", // 确保模块解析与 Node.js 一致
        // "jsx": "preserve", // 如果你使用 JSX 或 TSX，这样设置可以让 TypeScript 保留 JSX 语法
        "esModuleInterop": true, // 开启 esModuleInterop，简化导入非 ES 模块
        "skipLibCheck": true, // 跳过库文件的类型检查，提升编译性能
        // "allowJs": true, // 如果你有 JS 文件，可以允许它们一起编译
        // "useDefineForClassFields": true // 对于类字段的定义使用现代标准
        "types": ["element-plus/global"]
    }
}
